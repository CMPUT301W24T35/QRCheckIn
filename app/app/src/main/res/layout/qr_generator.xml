<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate QR Code"
        android:textSize="25dp"
        android:textStyle="bold"
        android:padding="20dp"
        android:textAlignment="center"/>
    <ImageView
        android:id="@+id/checkinQRCodeImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/qr_code_placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/generateCheckinQRCodeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate QR Code"
            />
        <Button
            android:id="@+id/reuseCheckinQRCodeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reuse QR Code"
            />

        </LinearLayout>
    <Button
        android:id="@+id/confirmEventCreationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        />
</LinearLayout>